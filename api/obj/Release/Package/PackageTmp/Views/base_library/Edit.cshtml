@model api.Models.base_library

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        <a href="@Url.Action("Index")" class="btn btn-warning"><i class="fa fa-angle-left fa-lg" style="margin-right: 10px"></i>Voltar</a>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("index")" base_library="api.Models.base_library.library_bc_1">Listar</a></li>
        <li class="active" base_library="api.Models.base_library.library_bc_edit">Editar</li>
    </ol>
</section>



<section class="content">
    <div class="col-md-12">
        <div class="alert alert-info col-md-12" role="alert">
            <i class="fa fa-pencil" style="margin-right: 10px"></i><b base_library="api.Models.base_library.library_code">Editando Código:</b> <span class="editid">@Model.id</span>
        </div>
    </div>
    <div style="clear: both"></div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(true)
        <div class="alert alert-danger" role="alert" base_library="api.Models.base_library.library_error_register">
            Registro não gravado, verificar erro criticado
        </div>


        <fieldset>

            <div class="col-md-12 bar">
                <label class="col-md-6" base_library="api.Models.base_library.library_title"><i class="fa fa-list-alt" style="margin-right: 10px"></i>Dados Pessoais</label>
            </div>
            @Html.HiddenFor(model => model.id)




            <div class="form-group col-md-6">
                <label class="control-label" base_library="api.Models.base_library.url">url</label>

                <div style="clear: both"></div>
                @Html.TextBoxFor(model => model.url, new { placeholder = "", @class = "form-control", maxLength = "150" })
                @Html.ValidationMessageFor(model => model.url)
            </div>







            <div class="form-group col-md-6">
                <label class="control-label" base_library="api.Models.base_library.name">name</label>

                <div style="clear: both"></div>
                @Html.TextBoxFor(model => model.name, new { placeholder = "", @class = "form-control", maxLength = "150" })
                @Html.ValidationMessageFor(model => model.name)
            </div>







            <div class="form-group col-md-6">
                <label class="control-label" base_library="api.Models.base_library.description">description</label>

                <div style="clear: both"></div>
                @Html.TextBoxFor(model => model.description, new { placeholder = "", @class = "form-control", maxLength = "150" })
                @Html.ValidationMessageFor(model => model.description)
            </div>







            <div class="form-group col-md-6">
                <label class="control-label" base_library="api.Models.base_library.col">col</label>

                <div style="clear: both"></div>
                <div class="col-md-12 row" style="line-height: 29px">
                    <label>
                        <input type="radio" value="true" name="item_col" class="minimal-green">
                        Sim

                    </label>
                    <label>
                        <input type="radio" value="false" name="item_col" class="minimal">
                        Não

                    </label>
                </div>
                <div style="clear: both"></div>
                @Html.HiddenFor(model => model.col, new { icheck = "item_col" })
                @Html.ValidationMessageFor(model => model.col)
            </div>







            <div class="form-group col-md-6">
                <label class="control-label" base_library="api.Models.base_library.col_description">col_description</label>

                <div style="clear: both"></div>
                @Html.TextBoxFor(model => model.col_description, new { placeholder = "", @class = "form-control", maxLength = "150" })
                @Html.ValidationMessageFor(model => model.col_description)
            </div>






            <div class="form-group col-md-6">
                <label class="control-label" base_library="api.Models.base_library.size">size</label>

                <div style="clear: both"></div>
                @Html.TextBoxFor(model => model.size, new { placeholder = "", @class = "form-control", maxLength = "150" })
                @Html.ValidationMessageFor(model => model.size)
            </div>






            <div class="form-group col-md-12 btn-gallery">
                <a base_library="api.Models.base_library.library_delete" onclick="delete_item('@(Url.Action("Delete"))?id=@(Model.id)')" class="btn btn-danger"><i class="fa fa-trash"></i>Excluir</a>
                <a base_library="api.Models.base_library.library_edit" onclick="$(this).closest('form').submit()" class="btn btn-success pull-right"><i class="fa fa-pencil"></i>Editar</a>
            </div>

        </fieldset>
    }
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
