
@model Site.Models.Find<api.Controllers.base_libraryController.find>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        <a href="@Url.Action("Create")" class="btn btn-info" base_library="api.Models.base_library.library_create"><i class="fa fa-plus" style="margin-right:10px"></i>Criar Novo</a>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#" base_library="api.Models.base_library.library_bc_1"><i class="fa fa-newspaper-o"></i>Listar</a></li>
        <li class="active"><a href="@Url.Action("index")" base_library="api.Models.base_library.library_bc_list">Index</a></li>
    </ol>
</section>

<section class="content">




     <form ajax="@Url.Action("Find")" table="tbl">
        <input type="hidden" id="Page" name="Page" value="0" />

    <div class="table-default scroll">
        <div class="filter-table" base_library="api.Models.base_library.library_filter"><i class="fa fa-filter"></i>filtros</div>
        <div class="filter-table" base_library="api.Models.sample.library_report" onclick="fnExcelReport()" style="margin-left:83px; width:110px">
            <i class="fa fa-file-excel-o"></i>Relatório
        </div>
<table  id="tbl"> 

    <thead>
        <tr>
        

<td>
            
									@Html.TextBoxFor(model => model.Filter.url, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </td>


<td>
            
									@Html.TextBoxFor(model => model.Filter.name, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </td>


<td>
            
									@Html.TextBoxFor(model => model.Filter.description, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </td>


<td>
            
										<label style="min-width: 45px;">
							<input type="checkbox" value="true" name="item_col" class="minimal-green">
							Sim

						</label>
						<label style="min-width: 45px;">
							<input type="checkbox" value="false" name="item_col" class="minimal">
							Não

						</label>
					@Html.HiddenFor(model => model.Filter.col, new { icheck = "item_col" })
                            
   </td>


<td>
            
									@Html.TextBoxFor(model => model.Filter.col_description, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </td>

	</tr>
</thead>
    <tr>
        <td base_library="api.Models.base_library.url">
            @Html.DisplayNameFor(model => model.Filter.url)
        </td>
        <td base_library="api.Models.base_library.name">
            @Html.DisplayNameFor(model => model.Filter.name)
        </td>
        <td base_library="api.Models.base_library.description">
            @Html.DisplayNameFor(model => model.Filter.description)
        </td>
        <td base_library="api.Models.base_library.col">
            @Html.DisplayNameFor(model => model.Filter.col)
        </td>
        <td base_library="api.Models.base_library.col_description">
            @Html.DisplayNameFor(model => model.Filter.col_description)
        </td>
    </tr>
</table>
</div>
</form>
</section>

		<script template="tbl" type="text/template" redirect="@Url.Action("edit")"> 

    <tr class="tblrow" pk="id">
        <td column="url">
        </td>
        <td column="name">
        </td>
        <td column="description">
        </td>
        <td column="col">
        </td>
        <td column="col_description">
        </td>
       
    </tr>


</script>
