
@model Site.Models.Find<api.Controllers.perfilsController.find>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        <a href="@Url.Action("Create")" class="btn btn-info" base_library="api.Models.perfil.library_create"><i class="fa fa-plus" style="margin-right:10px"></i>Criar Novo</a>
        <a href="@Url.Action("index","status_usuarios")" class="btn btn-warning" base_library="api.Models.perfil.library_create"><i class="fa fa-info-circle" style="margin-right:10px"></i>Status do Usuário</a>

    </h1>
    <ol class="breadcrumb">
        <li><a href="#" base_library="api.Models.perfil.library_bc_1"><i class="fa fa-newspaper-o"></i>Listar</a></li>
        <li class="active"><a href="@Url.Action("index")" base_library="api.Models.perfil.library_bc_list">Index</a></li>
    </ol>
</section>

<section class="content">




     <form ajax="@Url.Action("Find")" table="tbl">
        <input type="hidden" id="Page" name="Page" value="0" />

    <div class="table-default scroll">
        <div class="filter-table" base_library="api.Models.perfil.library_filter"><i class="fa fa-filter"></i>filtros</div>
		
            <div class="filter-table" base_library="api.Models.sample.library_report" onclick="fnExcelReport()" style="margin-left:83px; width:110px">
                <i class="fa fa-file-excel-o"></i>Relatório
            </div>
<table  id="tbl"> 

    <thead>
        <tr>

            <td>
                @Html.TextBoxFor(model => model.Filter.id, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
            </td>

<td>
            
									@Html.TextBoxFor(model => model.Filter.name, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </td>

	</tr>
</thead>
    <tr>
        <td base_library="api.Models.perfil.id">
            @Html.DisplayNameFor(model => model.Filter.id)
        </td>
        <td base_library="api.Models.perfil.name">
            @Html.DisplayNameFor(model => model.Filter.name)
        </td>
    </tr>
</table>
        <div class='uil-flickr-css' loader="tbl" style='transform:scale(0.6); margin:0 auto; display:none'><div></div><div></div></div>
</div>
</form>
</section>

		<script template="tbl" type="text/template" redirect="@Url.Action("edit")"> 

    <tr class="tblrow" pk="id">
        <td column="id"></td>
        <td column="name">
        </td>
       
    </tr>


</script>
