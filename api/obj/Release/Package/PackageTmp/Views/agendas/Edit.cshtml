                <div style="clear: both"></div>

                @Html.TextBoxFor(model => model.domingo_fim, "{0:HH:mm}", new { placeholder = "", @class = "form-control", type = "time", maxLength = "10" })
                @Html.ValidationMessageFor(model => model.domingo_fim)

            </div>







            @Html.HiddenFor(model => model.administrador_id)

            @Html.HiddenFor(model => model.filial_id)

            <div class="form-group col-md-12 btn-gallery">
                <a base_library="api.Models.agenda.library_delete" onclick="delete_item('@(Url.Action("Delete"))?id=@(Model.id)')" class="btn btn-danger"><i class="fa fa-trash"></i>Excluir</a>
                <a base_library="api.Models.agenda.library_edit" onclick="$(this).closest('form').submit()" class="btn btn-success pull-right"><i class="fa fa-pencil"></i>Editar</a>
            </div>

        </fieldset>
}
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
