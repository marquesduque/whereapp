@model api.Models.agenda

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        <a href="@Url.Action("Index",new {filial_id = Request.QueryString["filial_id"],administrador_id = Request.QueryString["administrador_id"]})" class="btn btn-warning"><i class="fa fa-angle-left fa-lg" style="margin-right: 10px"></i>Voltar</a>
        <a href="@Url.Action("Index", "horarios", new { agenda_id = Model.id, filial_id = Request.QueryString["filial_id"] })" class="btn btn-danger"><i class="fa fa-info-circle" style="margin-right: 10px"></i>Gerenciar Horários</a>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("index")" base_library="api.Models.agenda.library_bc_1">Listar</a></li>
        <li class="active" base_library="api.Models.agenda.library_bc_edit">Editar</li>
    </ol>
</section>



<section class="content">
    <div class="col-md-12">
        <div class="alert alert-info col-md-12" role="alert">
            <i class="fa fa-pencil" style="margin-right: 10px"></i><b base_library="api.Models.agenda.library_code">Editando Código:</b> <span class="editid">@Model.id</span>
        </div>
    </div>
    <div style="clear: both"></div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(true)
        <div class="alert alert-danger" role="alert" base_library="api.Models.agenda.library_error_register">
            Registro não gravado, verificar erro criticado
        </div>


        <fieldset>

            <div class="col-md-12 bar">
                <label class="col-md-6" base_library="api.Models.agenda.library_title"><i class="fa fa-list-alt" style="margin-right: 10px"></i>Dados Pessoais</label>
            </div>
            @Html.HiddenFor(model => model.id)




            <div class="form-group col-md-6">
                <label class="control-label" base_library="api.Models.agenda.nome">Nome</label>

                <div style="clear: both"></div>
                @Html.TextBoxFor(model => model.nome, new { placeholder = "", @class = "form-control", maxLength = "150" })
                @Html.ValidationMessageFor(model => model.nome)
            </div>






            <div class="form-group col-md-12">
                <label class="control-label" base_library="api.Models.agenda.descricao">Descrição</label>

                <div style="clear: both"></div>
                @Html.TextAreaFor(model => model.descricao, new { placeholder = "", @class = "form-control", type = "time", maxLength = "10", rows = "5" })
                @Html.ValidationMessageFor(model => model.descricao)
            </div>

            <div class="form-group col-md-2">
                <label class="control-label" base_library="api.Models.agenda.segunda_inicio">Segunda-Feira - Abertura</label>

                <div style="clear: both"></div>
                @Html.TextBoxFor(model => model.segunda_inicio, "{0:HH:mm}", new { placeholder = "", @class = "form-control", type = "time", maxLength = "10", rows = "5" })
                @Html.ValidationMessageFor(model => model.segunda_inicio)
            </div>
            <div class="form-group col-md-2">
                <label class="control-label" base_library="api.Models.agenda.segunda_fim">Segunda-Feira - Fechamento</label>

                <div style="clear: both"></div>
                @Html.TextBoxFor(model => model.segunda_fim, "{0:HH:mm}", new { placeholder = "", @class = "form-control", type = "time", maxLength = "10", rows = "5" })
                @Html.ValidationMessageFor(model => model.segunda_fim)
            </div>
