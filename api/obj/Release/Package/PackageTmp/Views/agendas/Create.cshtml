                    <div style="clear: both"></div>
                    @Html.TextBoxFor(model => model.sexta_fim, "{0:HH:mm}", new { placeholder = "", @class = "form-control", type = "time", maxLength = "10", rows = "5" })
                    @Html.ValidationMessageFor(model => model.sexta_fim)
                </div>
                <div class="form-group col-md-2">
