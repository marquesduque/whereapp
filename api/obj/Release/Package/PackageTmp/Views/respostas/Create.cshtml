@model api.Models.resposta

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        <a href="@Url.Action("Index")" class="btn btn-info"><i class="glyphicon glyphicon-chevron-left" style="margin-right: 10px"></i>Voltar</a>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("index")" base_library="api.Models.resposta.library_bc_1">Listar</a></li>
        <li class="active" base_library="api.Models.resposta.library_bc_create">Criar</li>
    </ol>
</section>


<section class="content">
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

	      @Html.ValidationSummary(true)
        <div class="alert alert-danger" role="alert" base_library="api.Models.resposta.library_error_register">
            Registro não gravado, verificar erro criticado
        </div>

        <fieldset>

            <div class="col-md-12 bar">
                <label class="col-md-6" base_library="api.Models.resposta.library_title"><i class="glyphicon glyphicon-list-alt" style="margin-right: 10px"></i>Dados Pessoais</label>
            </div>
    
    <div>

            
            <div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.resposta.criacao" >criacao</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.criacao, "{0:dd/MM/yyyya}", new { placeholder = "", @class = "form-control", mask = "{\"value\":\"99/99/9999\", \"placeholder\":\"dd/mm/yyyy\"}", maxLength = "10" })
				                @Html.ValidationMessageFor(model => model.criacao)
            </div>
   

            
            <div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.resposta.valor" >valor</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.valor, new { placeholder = "", @class = "form-control", maxLength = "150" })
				                @Html.ValidationMessageFor(model => model.valor)
            </div>
   


				<div class="form-group col-md-6">
					<label class="control-label" base_library="api.Models.resposta.pergunta_id" >pergunta_id</label>
					<select class="form-control select2" source="#pergunta_id" data-placeholder="" style="width: 100%;">
                        <option value="null">Selecione um item</option>
						@foreach (var item in new api.Models.db().pergunta.Where(c => c.place_id == api.Models.db.place.place_id).Select(c => new { id = c.id, nome = c.nome }))
                        {
							<option value="@item.id">@(item.nome)</option>
						}
					</select>
					@Html.HiddenFor(model => model.pergunta_id)
					@Html.ValidationMessageFor(model => model.pergunta_id)
				</div>

   


				<div class="form-group col-md-6">
					<label class="control-label" base_library="api.Models.resposta.autor_id" >autor_id</label>
					<select class="form-control select2" source="#autor_id" data-placeholder="" style="width: 100%;">
                        <option value="null">Selecione um item</option>
						@foreach (var item in new api.Models.db().pessoa.Where(c => c.place_id == api.Models.db.place.place_id).Select(c => new { id = c.id, nome = c.nome }))
                        {
							<option value="@item.id">@(item.nome)</option>
						}
					</select>
					@Html.HiddenFor(model => model.autor_id)
					@Html.ValidationMessageFor(model => model.autor_id)
				</div>

   


				<div class="form-group col-md-6">
					<label class="control-label" base_library="api.Models.resposta.pessoa_id" >pessoa_id</label>
					<select class="form-control select2" source="#pessoa_id" data-placeholder="" style="width: 100%;">
                        <option value="null">Selecione um item</option>
						@foreach (var item in new api.Models.db().pessoa.Where(c => c.place_id == api.Models.db.place.place_id).Select(c => new { id = c.id, nome = c.nome }))
                        {
							<option value="@item.id">@(item.nome)</option>
						}
					</select>
					@Html.HiddenFor(model => model.pessoa_id)
					@Html.ValidationMessageFor(model => model.pessoa_id)
				</div>

   

            
            <div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.resposta.nome" >nome</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.nome, new { placeholder = "", @class = "form-control", maxLength = "150" })
				                @Html.ValidationMessageFor(model => model.nome)
            </div>
   

            
            <div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.resposta.place_id" >place_id</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.place_id, new { placeholder = "", @class = "form-control", maxLength = "150" })
				                @Html.ValidationMessageFor(model => model.place_id)
            </div>
   

        
            <div class="form-group col-md-12 btn-gallery">
                <a class="btn btn-success pull-right" onclick="$(this).closest('form').submit()" base_library="api.Models.resposta.library_save"><i class="glyphicon glyphicon-ok"></i>Salvar</a>
            </div>
    </div>
	</fieldset>
}

</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
