				<div style="clear: both"></div>
									<div class="col-md-12 row" style="line-height: 29px">
						<label>
							<input type="radio" value="true" name="item_quarta" class="minimal-green">
							Sim

						</label>
						<label>
							<input type="radio" value="false" name="item_quarta" class="minimal">
							Não

						</label>
					</div>
					<div style="clear: both"></div>
					@Html.HiddenFor(model => model.quarta, new { icheck = "item_quarta" })
                                @Html.ValidationMessageFor(model => model.quarta)
            </div>

         
  


            
       
