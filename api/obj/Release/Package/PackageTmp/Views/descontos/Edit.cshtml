				<div style="clear: both"></div>
									<div class="col-md-12 row" style="line-height: 29px">
						<label>
							<input type="radio" value="true" name="item_quinta" class="minimal-green">
							Sim

						</label>
						<label>
							<input type="radio" value="false" name="item_quinta" class="minimal">
							Não

						</label>
					</div>
					<div style="clear: both"></div>
					@Html.HiddenFor(model => model.quinta, new { icheck = "item_quinta" })
                                @Html.ValidationMessageFor(model => model.quinta)
            </div>

         
  


            
       
<div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.desconto.sexta" >sexta</label>
				
				<div style="clear: both"></div>
									<div class="col-md-12 row" style="line-height: 29px">
						<label>
							<input type="radio" value="true" name="item_sexta" class="minimal-green">
							Sim

						</label>
						<label>
							<input type="radio" value="false" name="item_sexta" class="minimal">
							Não

						</label>
					</div>
					<div style="clear: both"></div>
					@Html.HiddenFor(model => model.sexta, new { icheck = "item_sexta" })
                                @Html.ValidationMessageFor(model => model.sexta)
            </div>

         
  


            
       
