            </div>
   

            
            
   

        
            <div class="form-group col-md-12 btn-gallery">
                <a class="btn btn-success pull-right" onclick="$(this).closest('form').submit()" base_library="api.Models.desconto.library_save"><i class="fa fa-check"></i>Salvar</a>
            </div>
    </div>
	</fieldset>
}

</section>

