
@model Site.Models.Find<api.Controllers.perguntasController.find>

@{
    ViewBag.Title = "Index";
}

<section class="content-header">
    <h1>
        <a href="@Url.Action("Create")" class="btn btn-info" base_library="api.Models.pergunta.library_create"><i class="glyphicon glyphicon-plus" style="margin-right:10px"></i>Criar Novo</a>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#" base_library="api.Models.pergunta.library_bc_1"><i class="fa fa-newspaper-o"></i>Listar</a></li>
        <li class="active"><a href="@Url.Action("index")" base_library="api.Models.pergunta.library_bc_list">Index</a></li>
    </ol>
</section>

<section class="content">





     <form ajax="@Url.Action("Find")" table="tbl">
        <input type="hidden" id="Page" name="Page" value="0" />

		<div class="box box-default">
			<div class="box-header with-border">


                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pergunta.nome" >nome</label>
            
									@Html.TextBoxFor(model => model.Filter.nome, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pergunta.descricao" >descricao</label>
            
									@Html.TextBoxFor(model => model.Filter.descricao, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pergunta.tipo_id" >tipo_id</label>
					<select class="form-control select2" source="#Filter_tipo_id" data-placeholder="" onchange = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" style="width: 100%;">
						<option value="null">Todos</option>
						@foreach (var item in new api.Models.db().tipo.Where(c=>c.place_id == api.Models.db.place.place_id).Select(c=> new { id=c.id, nome=c.nome }))
						{
							<option value="@item.id">@(item.nome)</option>
						}
					</select>
					@Html.HiddenFor(model => model.Filter.tipo_id)
					@Html.ValidationMessageFor(model => model.Filter.tipo_id)
				

   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pergunta.grupo" >grupo</label>
            
									@Html.TextBoxFor(model => model.Filter.grupo, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pergunta.ordem" >ordem</label>
            
									@Html.TextBoxFor(model => model.Filter.ordem, new { placeholder = "", @class = "form-control", maxLength = "150", type="number", min="1", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pergunta.tipo_controle" >tipo_controle</label>
            
									@Html.TextBoxFor(model => model.Filter.tipo_controle, new { placeholder = "", @class = "form-control", maxLength = "150", type="number", min="1", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>

		<div class="box-tools pull-right">
			<button class="btn btn-box-tool" data-widget="collapse">Pesquisa Avançada<i style="margin-left: 10px" class="fa fa-plus-square fa-minus"></i></button>
		</div>
	</div>
	<div class="box-body" style="display:none">
	</div>
	<div class="form-group" style="border-top: 1px solid #f4f4f4; padding: 10px">
		<button href="#" class="btn btn-warning pull-right" type="button" name="btnProcurar" onclick="$('.tblrow').remove(); $('#Page').val('0'); $('[ajax]').submit();"><i class="glyphicon glyphicon-search" style="margin-right: 10px"></i>Procurar</button>
		<div style="clear: both"></div>
	</div>
</div>
    <div class="table-default scroll">
        <div class="filter-table" base_library="api.Models.pergunta.library_filter"><i class="glyphicon glyphicon-filter"></i>filtros</div>
		
            <div class="filter-table" base_library="api.Models.sample.library_report" onclick="fnExcelReport()" style="margin-left:83px; width:110px">
                <i class="fa fa-file-excel-o"></i>Relatório
            </div>
<table  id="tbl"> 
    <tr>
        <td base_library="api.Models.pergunta.nome">
            @Html.DisplayNameFor(model => model.Filter.nome)
        </td>
        <td base_library="api.Models.pergunta.descricao">
            @Html.DisplayNameFor(model => model.Filter.descricao)
        </td>
        <td base_library="api.Models.pergunta.tipo_id">
            @Html.DisplayNameFor(model => model.Filter.tipo_id)
        </td>
        <td base_library="api.Models.pergunta.grupo">
            @Html.DisplayNameFor(model => model.Filter.grupo)
        </td>
        <td base_library="api.Models.pergunta.ordem">
            @Html.DisplayNameFor(model => model.Filter.ordem)
        </td>
        <td base_library="api.Models.pergunta.tipo_controle">
            @Html.DisplayNameFor(model => model.Filter.tipo_controle)
        </td>
    </tr>
</table>
</div>
</form>
</section>

		<script template="tbl" type="text/template" redirect="@Url.Action("edit")"> 

    <tr class="tblrow" pk="id">
        <td column="nome">
        </td>
        <td column="descricao">
        </td>
        <td column="tipo_id">
        </td>
        <td column="grupo">
        </td>
        <td column="ordem">
        </td>
        <td column="tipo_controle">
        </td>
       
    </tr>


</script>
