
@model Site.Models.Find<api.Controllers.pedidosController.find>

@{
    ViewBag.Title = "Index";
}

<section class="content-header">
    <h1>
        <a href="@Url.Action("Create")" class="btn btn-info" base_library="api.Models.pedido.library_create"><i class="fa fa-plus" style="margin-right:10px"></i>Criar Novo</a>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#" base_library="api.Models.pedido.library_bc_1"><i class="fa fa-newspaper-o"></i>Listar</a></li>
        <li class="active"><a href="@Url.Action("index")" base_library="api.Models.pedido.library_bc_list">Index</a></li>
    </ol>
</section>

<section class="content">





     <form ajax="@Url.Action("Find")" table="tbl">
        <input type="hidden" id="Page" name="Page" value="0" />

		<div class="box box-default">
			<div class="box-header with-border">


                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pedido.produto_id" >produto_id</label>
					<select class="form-control select2" source="#Filter_produto_id" data-placeholder="" onchange = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" style="width: 100%;">
						<option value="null">Todos</option>
						@foreach (var item in new api.Models.db().produto)
						{
							<option value="@item.id">@(item.nome)</option>
						}
					</select>
					@Html.HiddenFor(model => model.Filter.produto_id)
					@Html.ValidationMessageFor(model => model.Filter.produto_id)
				

   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pedido.preco" >preco</label>
            
									@Html.TextBoxFor(model => model.Filter.preco, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pedido.desconto" >desconto</label>
            
									@Html.TextBoxFor(model => model.Filter.desconto, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pedido.complemento_de" >complemento_de</label>
					<select class="form-control select2" source="#Filter_complemento_de" data-placeholder="" onchange = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" style="width: 100%;">
						<option value="null">Todos</option>
						@foreach(var item in new api.Models.db().pedido)
						{
							<option value="@item.id">@(item.id)</option>
						}
					</select>
					@Html.HiddenFor(model => model.Filter.complemento_de)
					@Html.ValidationMessageFor(model => model.Filter.complemento_de)
				

   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pedido.montagem" >montagem</label>
            
									@Html.TextBoxFor(model => model.Filter.montagem, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pedido.compra_id" >compra_id</label>
					<select class="form-control select2" source="#Filter_compra_id" data-placeholder="" onchange = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" style="width: 100%;">
						<option value="null">Todos</option>
						@foreach (var item in new api.Models.db().compra)
						{
							<option value="@item.id">@(item.id)</option>
						}
					</select>
					@Html.HiddenFor(model => model.Filter.compra_id)
					@Html.ValidationMessageFor(model => model.Filter.compra_id)
				

   </div>

		<div class="box-tools pull-right">
			<button class="btn btn-box-tool" data-widget="collapse">Pesquisa Avançada<i style="margin-left: 10px" class="fa fa-plus-square fa-minus"></i></button>
		</div>
	</div>
	<div class="box-body" style="display:none">
	</div>
	<div class="form-group" style="border-top: 1px solid #f4f4f4; padding: 10px">
		<button href="#" class="btn btn-warning pull-right" type="button" name="btnProcurar" onclick="$('.tblrow').remove(); $('#Page').val('0'); $('[ajax]').submit();"><i class="fa fa-search" style="margin-right: 10px"></i>Procurar</button>
		<div style="clear: both"></div>
	</div>
</div>
    <div class="table-default scroll">
        <div class="filter-table" base_library="api.Models.pedido.library_filter"><i class="fa fa-filter"></i>filtros</div>
		
            <div class="filter-table" base_library="api.Models.sample.library_report" onclick="fnExcelReport()" style="margin-left:83px; width:110px">
                <i class="fa fa-file-excel-o"></i>Relatório
            </div>
<table  id="tbl"> 
    <tr>
        <td base_library="api.Models.pedido.produto_id">
            @Html.DisplayNameFor(model => model.Filter.produto_id)
        </td>
        <td base_library="api.Models.pedido.preco">
            @Html.DisplayNameFor(model => model.Filter.preco)
        </td>
        <td base_library="api.Models.pedido.desconto">
            @Html.DisplayNameFor(model => model.Filter.desconto)
        </td>
        <td base_library="api.Models.pedido.complemento_de">
            @Html.DisplayNameFor(model => model.Filter.complemento_de)
        </td>
        <td base_library="api.Models.pedido.montagem">
            @Html.DisplayNameFor(model => model.Filter.montagem)
        </td>
        <td base_library="api.Models.pedido.compra_id">
            @Html.DisplayNameFor(model => model.Filter.compra_id)
        </td>
    </tr>
</table>
</div>
</form>
</section>

		<script template="tbl" type="text/template" redirect="@Url.Action("edit")"> 

    <tr class="tblrow" pk="id">
        <td column="produto_id">
        </td>
        <td column="preco">
        </td>
        <td column="desconto">
        </td>
        <td column="complemento_de">
        </td>
        <td column="montagem">
        </td>
        <td column="compra_id">
        </td>
       
    </tr>


</script>
