@model api.Models.pedido

@{
    ViewBag.Title = "Edit";
}

<section class="content-header">
    <h1>
        <a href="@Url.Action("Index")" class="btn btn-warning"><i class="fa fa-angle-left fa-lg" style="margin-right: 10px"></i>Voltar</a>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("index")" base_library="api.Models.pedido.library_bc_1">Listar</a></li>
        <li class="active" base_library="api.Models.pedido.library_bc_edit">Editar</li>
    </ol>
</section>


<section class="content">
    <div class="col-md-12">
        <div class="alert alert-info col-md-12" role="alert">
            <i class="fa fa-pencil" style="margin-right: 10px"></i><b base_library="api.Models.pedido.library_code">Editando Código:</b> <span class="editid">@Model.id</span>
        </div>
    </div>
    <div style="clear: both"></div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(true)
        <div class="alert alert-danger" role="alert" base_library="api.Models.pedido.library_error_register">
            Registro não gravado, verificar erro criticado
        </div>


        <fieldset>
		
            <div class="col-md-12 bar">
                <label class="col-md-6" base_library="api.Models.pedido.library_title"><i class="fa fa-list-alt" style="margin-right: 10px"></i>Dados Pessoais</label>
            </div>
        @Html.HiddenFor(model => model.id)


            
       
                <div class="form-group col-md-6">
					<label class="control-label" base_library="api.Models.pedido.produto_id" >produto_id</label>
					<select class="form-control select2" source="#produto_id" data-placeholder="" style="width: 100%;">
                        <option value="null">Selecione um item</option>
						@foreach (var item in new api.Models.db().produto)
						{
							<option value="@item.id">@item.nome</option>
						}
					</select>
					@Html.HiddenFor(model => model.produto_id)
					@Html.ValidationMessageFor(model => model.produto_id)
				</div>
         
  


            
       
<div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.pedido.preco" >preco</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.preco, new { placeholder = "", @class = "form-control", maxLength = "150" })
				                @Html.ValidationMessageFor(model => model.preco)
            </div>

         
  


            
       
<div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.pedido.desconto" >desconto</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.desconto, new { placeholder = "", @class = "form-control", maxLength = "150" })
				                @Html.ValidationMessageFor(model => model.desconto)
            </div>

         
  


            
       
                <div class="form-group col-md-6">
					<label class="control-label" base_library="api.Models.pedido.complemento_de" >complemento_de</label>
					<select class="form-control select2" source="#complemento_de" data-placeholder="" style="width: 100%;">
                        <option value="null">Selecione um item</option>
						@foreach (var item in new api.Models.db().complemento_de)
						{
							<option value="@item.id">@item.nome</option>
						}
					</select>
					@Html.HiddenFor(model => model.complemento_de)
					@Html.ValidationMessageFor(model => model.complemento_de)
				</div>
         
  


            
       
<div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.pedido.montagem" >montagem</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.montagem, new { placeholder = "", @class = "form-control", maxLength = "150" })
				                @Html.ValidationMessageFor(model => model.montagem)
            </div>

         
  


            
       
                <div class="form-group col-md-6">
					<label class="control-label" base_library="api.Models.pedido.compra_id" >compra_id</label>
					<select class="form-control select2" source="#compra_id" data-placeholder="" style="width: 100%;">
                        <option value="null">Selecione um item</option>
						@foreach (var item in new api.Models.db().compra)
						{
							<option value="@item.id">@item.nome</option>
						}
					</select>
					@Html.HiddenFor(model => model.compra_id)
					@Html.ValidationMessageFor(model => model.compra_id)
				</div>
         
  

        
		
            <div class="form-group col-md-12 btn-gallery">
                <a base_library="api.Models.pedido.library_delete" onclick="delete_item('@(Url.Action("Delete"))?id=@(Model.id)')" class="btn btn-danger"><i class="fa fa-trash"></i>Excluir</a>
                <a base_library="api.Models.pedido.library_edit" onclick="$(this).closest('form').submit()" class="btn btn-success pull-right"><i class="fa fa-pencil"></i>Editar</a>
            </div>

    </fieldset>
}
</section>

