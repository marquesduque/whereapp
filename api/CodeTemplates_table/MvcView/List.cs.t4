            continue;
        }
#>
        <td base_library="<#= ViewDataTypeName #>.<#= property.PropertyName #>">
            @Html.DisplayNameFor(model => model.Filter.<#= GetValueExpression(property) #>)
        </td>
<#
    }
}
#>
    </tr>
</table>
</div>
</form>
