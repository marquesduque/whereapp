<script template="tbl" type="text/template" redirect="@Url.Action("edit")">

    <tr class="tblrow" pk="id">
        <td column="nome"></td>
        <td column="rg"></td>
        <td column="cpf"></td>
        <td column="email"></td>
        <td column="celular"></td>
        <td column="telefone"></td>
