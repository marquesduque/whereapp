@model api.Models.cartao

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        <a href="@Url.Action("Index")" class="btn btn-info"><i class="glyphicon glyphicon-chevron-left" style="margin-right: 10px"></i>Voltar</a>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("index")" base_library="api.Models.cartao.library_bc_1">Listar</a></li>
        <li class="active" base_library="api.Models.cartao.library_bc_create">Criar</li>
    </ol>
</section>


<section class="content">
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

	      @Html.ValidationSummary(true)
        <div class="alert alert-danger" role="alert" base_library="api.Models.cartao.library_error_register">
            Registro não gravado, verificar erro criticado
        </div>

        <fieldset>

            <div class="col-md-12 bar">
                <label class="col-md-6" base_library="api.Models.cartao.library_title"><i class="glyphicon glyphicon-list-alt" style="margin-right: 10px"></i>Dados pessoais</label>
            </div>
    
    <div>

            
            <div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.cartao.numero" >numero</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.numero, new { placeholder = "", @class = "form-control", maxLength = "150" })
				                @Html.ValidationMessageFor(model => model.numero)
            </div>
   

            
            <div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.cartao.nome" >nome</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.nome, new { placeholder = "", @class = "form-control", maxLength = "150" })
				                @Html.ValidationMessageFor(model => model.nome)
            </div>
   

            
            <div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.cartao.expiracao" >expiracao</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.expiracao, new { placeholder = "", @class = "form-control", maxLength = "150" })
				                @Html.ValidationMessageFor(model => model.expiracao)
            </div>
   

            
            <div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.cartao.cvv" >cvv</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.cvv, new { placeholder = "", @class = "form-control", maxLength = "150" })
				                @Html.ValidationMessageFor(model => model.cvv)
            </div>
   

            
            <div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.cartao.hash" >hash</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.hash, new { placeholder = "", @class = "form-control", maxLength = "150" })
				                @Html.ValidationMessageFor(model => model.hash)
            </div>
   


				<div class="form-group col-md-6">
					<label class="control-label" base_library="api.Models.cartao.pessoa_id" >pessoa_id</label>
					<select class="form-control select2" source="#pessoa_id" data-placeholder="" style="width: 100%;">
                        <option value="null">Selecione um item</option>
						@foreach (var item in new api.Models.db().pessoa.Select(c => new { id = c.id, nome = c.nome }))
						{
							<option value="@item.id">@(item.nome)</option>
						}
					</select>
					@Html.HiddenFor(model => model.pessoa_id)
					@Html.ValidationMessageFor(model => model.pessoa_id)
				</div>

   

            
            <div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.cartao.documento" >documento</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.documento, new { placeholder = "", @class = "form-control", maxLength = "150" })
				                @Html.ValidationMessageFor(model => model.documento)
            </div>
   

            
            <div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.cartao.pagarme_id" >pagarme_id</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.pagarme_id, new { placeholder = "", @class = "form-control", maxLength = "150" })
				                @Html.ValidationMessageFor(model => model.pagarme_id)
            </div>
   

            
            <div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.cartao.bandeira" >bandeira</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.bandeira, new { placeholder = "", @class = "form-control", maxLength = "150" })
				                @Html.ValidationMessageFor(model => model.bandeira)
            </div>
   

            
            <div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.cartao.place_id" >place_id</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.place_id, new { placeholder = "", @class = "form-control", maxLength = "150" })
				                @Html.ValidationMessageFor(model => model.place_id)
            </div>
   


				<div class="form-group col-md-6">
					<label class="control-label" base_library="api.Models.cartao.compra_id" >compra_id</label>
					<select class="form-control select2" source="#compra_id" data-placeholder="" style="width: 100%;">
                        <option value="null">Selecione um item</option>
						@foreach (var item in new api.Models.db().compra.Select(c => new { id = c.id, nome = c.nome }))
						{
							<option value="@item.id">@(item.nome)</option>
						}
					</select>
					@Html.HiddenFor(model => model.compra_id)
					@Html.ValidationMessageFor(model => model.compra_id)
				</div>

   

        
            <div class="form-group col-md-12 btn-gallery">
                <a class="btn btn-success pull-right" onclick="$(this).closest('form').submit()" base_library="api.Models.cartao.library_save"><i class="glyphicon glyphicon-ok"></i>Salvar</a>
            </div>
    </div>
	</fieldset>
}

</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
