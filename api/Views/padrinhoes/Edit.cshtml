@model api.Models.padrinho

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        <a href="@Url.Action("Index")" class="btn btn-warning"><i class="glyphicon glyphicon-chevron-left" style="margin-right: 10px"></i>Voltar</a>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("index")" base_library="api.Models.padrinho.library_bc_1">Listar</a></li>
        <li class="active" base_library="api.Models.padrinho.library_bc_edit">Editar</li>
    </ol>
</section>



<section class="content">
    <div class="col-md-12">
        <div class="alert alert-info col-md-12" role="alert">
            <i class="glyphicon glyphicon-pencil" style="margin-right: 10px"></i><b base_library="api.Models.padrinho.library_code">Editando Código:</b> <span class="editid">@Model.id</span>
        </div>
    </div>
    <div style="clear: both"></div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(true)
        <div class="alert alert-danger" role="alert" base_library="api.Models.padrinho.library_error_register">
            Registro não gravado, verificar erro criticado
        </div>


        <fieldset>
		
            <div class="col-md-12 bar">
                <label class="col-md-6" base_library="api.Models.padrinho.library_title"><i class="glyphicon glyphicon-list-alt" style="margin-right: 10px"></i>Dados pessoais</label>
            </div>
        @Html.HiddenFor(model => model.id)


            
       
                <div class="form-group col-md-6">
					<label class="control-label" base_library="api.Models.padrinho.padrinho_id" >padrinho_id</label>
					<select class="form-control select2" source="#padrinho_id" data-placeholder="" style="width: 100%;">
                        <option value="null">Selecione um item</option>
						@foreach (var item in new api.Models.db().padrinho.Select(c => new { id = c.id, nome = c.nome }))
						{
							<option value="@item.id">@item.nome</option>
						}
					</select>
					@Html.HiddenFor(model => model.padrinho_id)
					@Html.ValidationMessageFor(model => model.padrinho_id)
				</div>
         
  


            
       
                <div class="form-group col-md-6">
					<label class="control-label" base_library="api.Models.padrinho.item_id" >item_id</label>
					<select class="form-control select2" source="#item_id" data-placeholder="" style="width: 100%;">
                        <option value="null">Selecione um item</option>
						@foreach (var item in new api.Models.db().item.Select(c => new { id = c.id, nome = c.nome }))
						{
							<option value="@item.id">@item.nome</option>
						}
					</select>
					@Html.HiddenFor(model => model.item_id)
					@Html.ValidationMessageFor(model => model.item_id)
				</div>
         
  


            
       
<div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.padrinho.valor" >valor</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.valor, new { placeholder = "", @class = "form-control", maxLength = "150" })
				                @Html.ValidationMessageFor(model => model.valor)
            </div>

         
  


            
       
<div class="form-group col-md-6">
									<label class="control-label" base_library="api.Models.padrinho.cadastro" >cadastro</label>
				
				<div style="clear: both"></div>
									@Html.TextBoxFor(model => model.cadastro, "{0:dd/MM/yyyy}", new { placeholder = "", @class = "form-control", mask = "{\"value\":\"99/99/9999\", \"placeholder\":\"dd/mm/yyyy\"}", maxLength = "10" })
				                @Html.ValidationMessageFor(model => model.cadastro)
            </div>

         
  

        
		
            <div class="form-group col-md-12 btn-gallery">
                <a base_library="api.Models.padrinho.library_delete" onclick="delete_item('@(Url.Action("Delete"))?id=@(Model.id)')" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i>Excluir</a>
                <a base_library="api.Models.padrinho.library_edit" onclick="$(this).closest('form').submit()" class="btn btn-success pull-right"><i class="glyphicon glyphicon-pencil"></i>Editar</a>
            </div>

    </fieldset>
}
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
