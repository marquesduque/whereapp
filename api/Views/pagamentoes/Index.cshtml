
@model Site.Models.Find<api.Controllers.pagamentosController.find>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        <a href="@Url.Action("Create")" class="btn btn-info" base_library="api.Models.pagamento.library_create"><i class="glyphicon glyphicon-plus" style="margin-right:10px"></i>Criar Novo</a>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#" base_library="api.Models.pagamento.library_bc_1"><i class="fa fa-newspaper-o"></i>Listar</a></li>
        <li class="active"><a href="@Url.Action("index")" base_library="api.Models.pagamento.library_bc_list">Index</a></li>
    </ol>
</section>

<section class="content">





     <form ajax="@Url.Action("Find")" table="tbl">
        <input type="hidden" id="Page" name="Page" value="0" />

		<div class="box box-default">
			<div class="box-header with-border">


                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pagamento.nome" >nome</label>
            
									@Html.TextBoxFor(model => model.Filter.nome, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pagamento.taxa" >taxa</label>
            
									@Html.TextBoxFor(model => model.Filter.taxa, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pagamento.grupo_do_pagamento_id" >grupo_do_pagamento_id</label>
            
									@Html.TextBoxFor(model => model.Filter.grupo_do_pagamento_id, new { placeholder = "", @class = "form-control", maxLength = "150", type="number", min="1", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pagamento.bandeira_id" >bandeira_id</label>
            
									@Html.TextBoxFor(model => model.Filter.bandeira_id, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pagamento.place_id" >place_id</label>
            
									@Html.TextBoxFor(model => model.Filter.place_id, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pagamento.transacao" >transacao</label>
            
									@Html.TextBoxFor(model => model.Filter.transacao, new { placeholder = "", @class = "form-control", maxLength = "150", type="number", min="1", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.pagamento.external_id" >external_id</label>
            
									@Html.TextBoxFor(model => model.Filter.external_id, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>

		<div class="box-tools pull-right">
			<button class="btn btn-box-tool" data-widget="collapse">Pesquisa Avançada<i style="margin-left: 10px" class="fa fa-plus-square fa-minus"></i></button>
		</div>
	</div>
	<div class="box-body" style="display:none">
	</div>
	<div class="form-group" style="border-top: 1px solid #f4f4f4; padding: 10px">
		<button href="#" class="btn btn-warning pull-right" type="button" name="btnProcurar" onclick="$('.tblrow').remove(); $('#Page').val('0'); $('[ajax]').submit();"><i class="glyphicon glyphicon-search" style="margin-right: 10px"></i>Procurar</button>
		<div style="clear: both"></div>
	</div>
</div>
    <div class="table-default scroll">
        <div class="filter-table" base_library="api.Models.pagamento.library_filter"><i class="glyphicon glyphicon-filter"></i>filtros</div>
		
            <div class="filter-table" base_library="api.Models.sample.library_report" onclick="fnExcelReport()" style="margin-left:83px; width:110px">
                <i class="fa fa-file-excel-o"></i>Relatório
            </div>
<table  id="tbl"> 
    <tr>
        <td base_library="api.Models.pagamento.nome">
            @Html.DisplayNameFor(model => model.Filter.nome)
        </td>
        <td base_library="api.Models.pagamento.taxa">
            @Html.DisplayNameFor(model => model.Filter.taxa)
        </td>
        <td base_library="api.Models.pagamento.grupo_do_pagamento_id">
            @Html.DisplayNameFor(model => model.Filter.grupo_do_pagamento_id)
        </td>
        <td base_library="api.Models.pagamento.bandeira_id">
            @Html.DisplayNameFor(model => model.Filter.bandeira_id)
        </td>
        <td base_library="api.Models.pagamento.place_id">
            @Html.DisplayNameFor(model => model.Filter.place_id)
        </td>
        <td base_library="api.Models.pagamento.transacao">
            @Html.DisplayNameFor(model => model.Filter.transacao)
        </td>
        <td base_library="api.Models.pagamento.external_id">
            @Html.DisplayNameFor(model => model.Filter.external_id)
        </td>
    </tr>
</table>
</div>
</form>
</section>

		<script template="tbl" type="text/template" redirect="@Url.Action("edit")"> 

    <tr class="tblrow" pk="id">
        <td column="nome">
        </td>
        <td column="taxa">
        </td>
        <td column="grupo_do_pagamento_id">
        </td>
        <td column="bandeira_id">
        </td>
        <td column="place_id">
        </td>
        <td column="transacao">
        </td>
        <td column="external_id">
        </td>
       
    </tr>


</script>
