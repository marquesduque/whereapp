
@model Site.Models.Find<api.Controllers.biblioteca_de_palavraController.find>

@{
    ViewBag.Title = "Index";
}

<section class="content-header">
    <h1>
        <a href="@Url.Action("Create")" class="btn btn-info" base_library="api.Models.biblioteca_de_palavra.library_create"><i class="glyphicon glyphicon-plus" style="margin-right:10px"></i>Criar Novo</a>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#" base_library="api.Models.biblioteca_de_palavra.library_bc_1"><i class="fa fa-newspaper-o"></i>Listar</a></li>
        <li class="active"><a href="@Url.Action("index")" base_library="api.Models.biblioteca_de_palavra.library_bc_list">Index</a></li>
    </ol>
</section>

<section class="content">





     <form ajax="@Url.Action("Find")" table="tbl">
        <input type="hidden" id="Page" name="Page" value="0" />

		<div class="box box-default">
			<div class="box-header with-border">


                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.biblioteca_de_palavra.url" >url</label>
            
									@Html.TextBoxFor(model => model.Filter.url, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.biblioteca_de_palavra.name" >name</label>
            
									@Html.TextBoxFor(model => model.Filter.name, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.biblioteca_de_palavra.description" >description</label>
            
									@Html.TextBoxFor(model => model.Filter.description, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.biblioteca_de_palavra.col" >col</label>
            
									<div style="height: 34px; line-height: 30px;">
						<label style="min-width: 45px;">
							<input type="checkbox" value="true" name="item_col" class="minimal-green">
							Sim

						</label>
						<label style="min-width: 45px;">
							<input type="checkbox" value="false" name="item_col" class="minimal">
							Não

						</label>
						@Html.HiddenFor(model => model.Filter.col, new { icheck = "item_col" })
					</div>
                            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.biblioteca_de_palavra.col_description" >col_description</label>
            
									@Html.TextBoxFor(model => model.Filter.col_description, new { placeholder = "", @class = "form-control", maxLength = "150", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>



                <div class="form-group col-md-6">
					<label class="control-label" style="width:100%" base_library="api.Models.biblioteca_de_palavra.size" >size</label>
            
									@Html.TextBoxFor(model => model.Filter.size, new { placeholder = "", @class = "form-control", maxLength = "150", type="number", min="1", onblur = "$('.tblrow').remove(); $('#Page').val('0'); $(this).closest('form').submit()" })
				            
   </div>

		<div class="box-tools pull-right">
			<button class="btn btn-box-tool" data-widget="collapse">Pesquisa Avançada<i style="margin-left: 10px" class="fa fa-plus-square fa-minus"></i></button>
		</div>
	</div>
	<div class="box-body" style="display:none">
	</div>
	<div class="form-group" style="border-top: 1px solid #f4f4f4; padding: 10px">
		<button href="#" class="btn btn-warning pull-right" type="button" name="btnProcurar" onclick="$('.tblrow').remove(); $('#Page').val('0'); $('[ajax]').submit();"><i class="glyphicon glyphicon-search" style="margin-right: 10px"></i>Procurar</button>
		<div style="clear: both"></div>
	</div>
</div>
    <div class="table-default scroll">
        <div class="filter-table" base_library="api.Models.biblioteca_de_palavra.library_filter"><i class="glyphicon glyphicon-filter"></i>filtros</div>
		
            <div class="filter-table" base_library="api.Models.sample.library_report" onclick="fnExcelReport()" style="margin-left:83px; width:110px">
                <i class="fa fa-file-excel-o"></i>Relatório
            </div>
<table  id="tbl"> 
    <tr>
        <td base_library="api.Models.biblioteca_de_palavra.url">
            @Html.DisplayNameFor(model => model.Filter.url)
        </td>
        <td base_library="api.Models.biblioteca_de_palavra.name">
            @Html.DisplayNameFor(model => model.Filter.name)
        </td>
        <td base_library="api.Models.biblioteca_de_palavra.description">
            @Html.DisplayNameFor(model => model.Filter.description)
        </td>
        <td base_library="api.Models.biblioteca_de_palavra.col">
            @Html.DisplayNameFor(model => model.Filter.col)
        </td>
        <td base_library="api.Models.biblioteca_de_palavra.col_description">
            @Html.DisplayNameFor(model => model.Filter.col_description)
        </td>
        <td base_library="api.Models.biblioteca_de_palavra.size">
            @Html.DisplayNameFor(model => model.Filter.size)
        </td>
    </tr>
</table>
</div>
</form>
</section>

		<script template="tbl" type="text/template" redirect="@Url.Action("edit")"> 

    <tr class="tblrow" pk="id">
        <td column="url">
        </td>
        <td column="name">
        </td>
        <td column="description">
        </td>
        <td column="col">
        </td>
        <td column="col_description">
        </td>
        <td column="size">
        </td>
       
    </tr>


</script>
